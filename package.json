{
  "name": "typescript-nodejs-template",
  "version": "1.0.0",
  "description": "A quickstart template for a typescript project for both the client-side and server-side.",
  "main": "./dist/server.js",
  "scripts": {
    "build-server:dev": "tsc --project ./tsconfig.server.json --watch",
    "build-server:prod": "tsc --project ./tsconfig.server.json",
    "build-client:dev": "tsc --project ./tsconfig.client.json --watch",
    "build-client:prod": "tsc --project ./tsconfig.client.json",
    "build-styles:dev": "sass --watch src/styles:public/dist/css",
    "build-styles:prod": "sass src/styles:public/dist/css",
    "start:dev": "nodemon",
    "start:prod": "node ./dist/server.js"
  },
  "repository": "https://github.com/deviatorslegacy/typescript-nodejs-template",
  "author": "DeviatorsLegacy <deviatorslegacy@outlook.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.35",
    "@types/socket.io": "^2.1.13",
    "@types/socket.io-client": "^1.4.36",
    "nodemon": "^2.0.7",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "sass": "^1.32.11",
    "socket.io": "^4.0.0"
  }
}
